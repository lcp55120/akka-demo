<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="true">
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{ISO8601} INFO %5p %c{2} - %m%n %throwable{3}"</pattern>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="debug">
        <Appender-Ref ref="console"/>
    </root>
</configuration>
